<h1>Listing all houses</h1>

<table>
	<tr>
		<th>Street Address</th>
		<th>City</th>
		<th>State</th>
		<th>Price</th>
	</tr>

	<% @houses.each do |house| %>
	<tr>
		<td><%= house.street_address %></td>
		<td><%= house.city %></td>
		<td><%= house.state %></td>
		<td><%= house.price %></td>
		<td><%= link_to 'Show', house_path(house) %></td>
		<td><%= link_to 'Edit', edit_house_path(house) %></td>
		<td><%= link_to 'Destroy', house_path(house),
		method: :delete,
		data: {confirm: 'Are you sure about deleting this house from database?'} %></td>
	</tr>
	<% end %>
</table>